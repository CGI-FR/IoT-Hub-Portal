            </MudItem>
            <MudItem xs="12" sm="8" md="9">
                <MudCard>
                    <EditForm Model="@gateway" OnValidSubmit="UpdateDevice">
                        <DataAnnotationsValidator />
                        <MudCardHeader>
                            <CardHeaderContent>
                                <MudText>Gateway Details</MudText>
                            </CardHeaderContent>
                        </MudCardHeader>
                        <MudCardContent>
                            <MudGrid>
                                <MudItem xs="12" md="6">
                                    <MudTextField @bind-Value="@gateway.Type" Label="Type" Variant="Variant.Outlined" />
                                </MudItem>
                                <MudItem xs="12" md="6">
                                    @*<MudTextField @bind-Value="@gateway.DeviceId" Label="Location Asset ID" Variant="Variant.Outlined" />*@
                                    <MudSelect T="string" Label="Environment" AnchorOrigin="Origin.BottomCenter" Variant="Variant.Outlined">

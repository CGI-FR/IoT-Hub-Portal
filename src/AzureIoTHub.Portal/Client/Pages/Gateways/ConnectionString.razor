@using Microsoft.AspNetCore.Authorization

@inject HttpClient Http

<div class="ConnectionString-dialog">
    <MudDialog>
        <DialogContent>
            <MudCard Outlined="true">
                <MudCardContent Class="connectionString-modal-card">
                    <div class="form-group">
                        <MudText Style="text-decoration:underline">Device Id :</MudText>
                        <p>@DeviceId</p>
                    </div>
                    <div class="form-group">
                        <MudText Style="text-decoration:underline">Symmetric Key :</MudText>
                        <p>@SymmetricKey</p>
                    </div>
                    <div class="form-group">
                        <MudText Style="text-decoration:underline">Service Endpoint : </MudText>
                        <p>@Endpoint</p>
                    </div>
                </MudCardContent>
            </MudCard>
        </DialogContent>
        <DialogActions>
            <MudButton OnClick="Cancel">Cancel</MudButton>
        </DialogActions>
    </MudDialog>
</div>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public string Endpoint { get; set; }
    [Parameter] public string SymmetricKey { get; set; }
    [Parameter] public string DeviceId { get; set; }

    void Cancel() => MudDialog.Cancel();
}

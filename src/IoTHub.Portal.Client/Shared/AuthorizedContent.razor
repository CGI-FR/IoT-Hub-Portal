@if (IsLoading)
{
    <MudContainer Class="d-flex justify-center align-center" Style="min-height: 80vh;">
        <MudProgressCircular Color="Color.Primary" Size="Size.Large" Indeterminate="true" />
    </MudContainer>
}
else if (!IsAuthorized)
{
    <MudAlert Severity="Severity.Error" Class="mt-4">
        <MudText Typo="Typo.h6">Unauthorized Access</MudText>
        <MudText>You don't have the required permissions to access this page.</MudText>
    </MudAlert>
}
else
{
    @ChildContent
}

@code {
    [Parameter]
    public bool IsLoading { get; set; }

    [Parameter]
    public bool IsAuthorized { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; } = default!;
}
